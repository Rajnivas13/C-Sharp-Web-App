@model learningsharp.Models.Category
<div class="Header">
    <h1 style="pt-5;text-align:left;">Add New Category</h1>
</div>
<div class="pt-3">
    <form method="post" asp-action="Create">
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DisplayOrder"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DisplayOrder" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action='Index' class="btn btn-info w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
    </form>
</div>